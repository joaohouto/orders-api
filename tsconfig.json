{
  "compilerOptions": {
   "module": "ESNext",
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./src",
    //"strict": true,
    "esModuleInterop": true,
    "baseUrl": "./src", 
    "paths": {
      "@/*": ["*"]
    },
    "typeRoots": ["./src/types", "./node_modules/@types"],


    "noEmitOnError": false,
    "skipLibCheck": true,
    "strict": false,
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
